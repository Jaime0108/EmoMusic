.top-area {
  width: 100%;
  position: relative;
  height: 560rpx;
}
.top-area .backgroundImage {
  position: absolute;
  width: 100%;
  height: 600rpx;
}
.top-area .userinfo {
  position: absolute;
  top: 120rpx;
  left: 34rpx;
  display: flex;
  align-items: center;
}
.top-area .userinfo .user-avatar {
  border: 6rpx solid #fff;
  border-radius: 50%;
  box-shadow: 2rpx 2rpx 0 #fff;
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
}
.top-area .userinfo .user-avatar image {
  width: 100%;
  height: 100%;
}
.top-area .userinfo .user-name {
  font-size: 40rpx;
}
.top-area .vip-area {
  position: absolute;
  bottom: 0;
  width: 640rpx;
  height: 320rpx;
  margin: 0 auto;
  color: #f5e19e;
  background: rgba(0, 0, 0, 0.3);
}
